@code {
        
    protected override void OnInitialized()
    {
        // Subscribe to changes SAFELY
        CartState.OnChange += async () => 
        {
            await InvokeAsync(StateHasChanged);
        };
    }

    public void Dispose()
    {
        // Unsubscribe to avoid memory leaks
        CartState.OnChange -= StateHasChanged;
    }
    
}
