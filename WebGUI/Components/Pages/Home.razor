@page "/"
@using Domain.Repositories.Interfaces
@using Microsoft.VisualBasic
@using Model.Entites
@inject IRepositoryAsync<Dish> DishRepository 
<PageTitle>Home</PageTitle>


<div class="container-fluid">
    <div class="row text-center my-5">
        <div class="col-12">
            <h5>seit 1977</h5>
        </div>
    </div>
    <div class="row align-items-center mb-5">
        <div class="col-md-6 text-center text-md-start px-5">
            <h3 class="d-flex justify-content-center">Standort</h3>
            <p class="mt-3 d-flex justify-content-center text-center">
                Das Restaurant erreicht man, indem man entlang der Oberen Landstraße Richtung Stadtzentrum spaziert und in einen reizvollen Innenhof abbiegt, der abseits des Trubels liegt. Dort verbirgt sich die Chiu‑Box, eingebettet zwischen charmanten Altstadtfassaden und mit einer einladenden, fast versteckten Atmosphäre. Die zentrale Lage bietet den Vorteil eines unkomplizierten Fußwegs von allen wichtigen Punkten der Altstadt und trotzdem eine ruhige Umgebung zum Genießen.

                </p>
            <br/>
        </div>
        <div class="col-md-6 text-center">
            <img src="Resources/naps.png" alt="Standort" class="img-fluid rounded home_image" style="max-width: 80%;"/>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <hr class="my-0" />
        </div>
    </div>

    <div class="row align-items-center py-5 section" style="height: 30rem">
        <div class="col-md-6 text-center">
            <img src="Resources/1 (2).jpg" alt="Gerichte" class="img-fluid rounded" style="max-height: 400px; width: auto; object-fit: cover;" />
        </div>
        <div class="col-md-6 text-center text-md-start px-5">
            <h3 class="d-flex justify-content-center">Gerichte</h3>
            <p class="mt-3 text-light d-flex justify-content-center text-center">
                Unsere Gerichte vereinen frische Zutaten, traditionelle Rezepturen und eine Prise Raffinesse. Jeder Bissen erzählt eine Geschichte – von knusprig gebratenem Gemüse über zart gegartes Fleisch bis hin zu aromatischen Saucen, die mit fein abgestimmten Gewürzen harmonieren. Ob pikant, süß-sauer oder mild-würzig: Hier findet jeder Gaumen sein persönliches Geschmackserlebnis. Authentisch zubereitet, liebevoll serviert – für echten Genuss, der lange in Erinnerung bleibt.
            </p>
        </div>
    </div>

</div>

@code {
    private List<Dish> dishes = new();
    protected override async Task OnInitializedAsync()
    {
        dishes = await DishRepository.ReadAllAsync();
    }
}
